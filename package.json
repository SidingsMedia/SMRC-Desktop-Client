{
    "repository": {
        "type": "git",
        "url": "https://github.com/SidingsMedia/SMRC-Desktop-Client.git"
    },
    "description": "SMRC Desktop Client build dependencies",
    "scripts": {
        "start": "cross-env NODE_ENV=development ts-node -P scripts/tsconfig.json scripts/start.ts",
        "start:prod": "cross-env NODE_ENV=production ts-node -P scripts/tsconfig.json scripts/start.ts",
        "compile:dev": "cross-env NODE_ENV=development TS_NODE_PROJECT=scripts/tsconfig.json parallel-webpack --config config/webpack.development.ts",
        "compile:prod": "cross-env NODE_ENV=production TS_NODE_PROJECT=scripts/tsconfig.json NODE_OPTIONS='--max_old_space_size=4096' parallel-webpack --config config/webpack.production.ts",
        "build:dev": "yarn compile:dev && cross-env NODE_ENV=development ts-node -P scripts/tsconfig.json scripts/build.ts",
        "build:prod": "yarn compile:prod && cross-env NODE_ENV=production ts-node -P scripts/tsconfig.json scripts/build.ts",
        "package": "ts-node -P scripts/tsconfig.json scripts/package.ts",
        "compile:script": "tsc -P script/tsconfig.json",
        "lint": "yarn prettier && yarn lint:src",
        "lint:fix": "yarn prettier --write && yarn lint:src:fix",
        "prettier": "prettier --check \"./**/*.{ts,tsx,js,json,jsx,scss,html,yaml,yml}\""
    },
    "author": {
        "name": "Sidings Media",
        "email": "contact@sidingsmedia.com",
        "url": "https://sidingsmedia.com"
    },
    "license": "MIT",
    "engines": {
        "node": ">= 10",
        "yarn": ">= 1.9"
    },
    "dependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^17.0.21",
        "@types/react": "^17.0.41",
        "@types/react-dom": "^17.0.14",
        "@types/webpack-bundle-analyzer": "^4.4.1",
        "@types/webpack-hot-middleware": "^2.25.6",
        "awesome-node-loader": "^1.1.1",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.1",
        "electron": "^17.1.2",
        "electron-builder": "^22.14.13",
        "electron-packager": "^15.4.0",
        "electron-winstaller": "^5.0.0",
        "express": "^4.17.3",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "mini-css-extract-plugin": "^2.6.0",
        "parallel-webpack": "^2.6.0",
        "sass": "^1.49.9",
        "sass-loader": "^12.6.0",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.2.8",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.2",
        "webpack": "^5.70.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-dev-middleware": "^5.3.1",
        "webpack-hot-middleware": "^2.25.1",
        "webpack-merge": "^5.8.0"
    },
    "devDependencies": {}
}
